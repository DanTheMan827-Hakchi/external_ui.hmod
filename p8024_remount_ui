uipath=""
case "$(cat "$mountpoint/etc/clover/boardtype")-$(cat "$mountpoint/etc/clover/REGION")" in
  dp-nes-EUR_USA)
    sfidentifer="nes-usa"
    uipath="$mountpoint/usr/share/clover-ui"
    ;;
  dp-hvc-JPN)
    sfidentifer="nes-jpn"
    uipath="$mountpoint/usr/share/clover-ui"
    ;;
  dp-shvc-USA)
    sfidentifer="snes-usa"
    uipath="$mountpoint/usr/share/ui/snes-usa"
    ;;
  dp-shvc-EUR)
    sfidentifer="snes-eur"
    uipath="$mountpoint/usr/share/ui/snes-eur"
    ;;
  dp-shvc-JPN)
    sfidentifer="snes-jpn"
    uipath="$mountpoint/usr/share/ui/shvc"
    ;;
esac

destuipath="$mountpoint/media/hakchi/ui/$sfidentifer"
if [ -d "$uipath" ] && touch "$mountpoint/media/hakchi/"; then
  if [ ! -d "$destuipath" ]; then
    mkdir -p "$destuipath"
    cp -r $uipath/* "$destuipath/"
  fi
fi

[ -d "$uipath" ] && [ -d "$destuipath" ] && mount_bind "$destuipath" "$uipath"
